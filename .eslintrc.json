{
    "env": {
        "es6": true,
        "node" : true,
        "mocha" : true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-console": ["error", { "allow": ["warn", "error"] }],
        "space-before-blocks": [
           "error",
           { "functions": "always", "keywords": "always", "classes": "always" }
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ]
    }
}
